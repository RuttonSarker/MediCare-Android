<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorProfile">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_ui"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_doctor_profile"
            app:civ_border_width="2dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#FF5722"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctorProfile"
            android:text="Doctor Profile"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />

        <ImageView
            android:id="@+id/editButton"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="25dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_edit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/doctorID"
            android:text="ID"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/doctorProfile"
            android:layout_marginTop="110dp"
            android:layout_marginStart="100dp"
            android:text="Dr."
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/doctorProfile"
            android:layout_marginTop="110dp"
            android:layout_marginStart="130dp"
            android:text="Name"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/doctorName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:text="BMDC:"
            android:textColor="#FF0000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bmdcID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/doctorName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="160dp"
            android:text="ID"
            android:textColor="#00BCD4"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userContact"
            android:text="Contact"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/bmdcID" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="315dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/white"
            >

            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userSpecialist"
            android:text="Specialist"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/userContact" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="415dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/white"
            >

            <EditText
                android:id="@+id/specialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userDegree"
            android:text="Degree"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/userSpecialist" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="515dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/white"
            >

            <EditText
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userMedical"
            android:text="Medical"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/userDegree"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="615dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/white"
            >

            <EditText
                android:id="@+id/medical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:editable="false"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userFees"
            android:text="Consultant Fees"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/userMedical"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="740dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/consultantFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userGender"
            android:text="Gender"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            android:layout_marginTop="85dp"
            android:layout_below="@+id/userFees"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="850dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/white"
            >

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>


    </ScrollView>


</RelativeLayout>